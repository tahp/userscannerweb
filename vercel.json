{
  "version": 2,
  "builds": [
    {
      "src": "web/backend/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "web/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "public"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/web/backend/main.py"
    },
    {
      "source": "/(.*)",
      "destination": "/public/$1"
    }
  ]
}